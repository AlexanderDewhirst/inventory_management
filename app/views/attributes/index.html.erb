<div class='container'>
  <div class='d-flex mt-5 align-items-center justify-content-between'>
    <h1>Attributes</h1>
    <%= link_to "New", new_attribute_path, class: 'btn btn-primary' %>
  </div>
  <div class='d-flex mt-3 justify-content-between'>
    <table class='table'>
      <thead>
        <tr>
          <th scope='col'>ID</th>
          <th scope='col'>Title</th>
          <th scope='col'>Value</th>
        </tr>
      </thead>

      <tbody>
        <% @attributes.each do |attribute| %>
          <tr>
            <td><%= attribute.to_param %></td>
            <td><%= attribute.title.humanize %>
            <td><%= attribute.value.humanize %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>