<div class='container'>
  <div class='d-flex mt-5 align-items-center justify-content-between'>
    <h1>Inventory</h1>

    <%= link_to 'New', new_item_path, class: 'btn btn-primary' %>
  </div>

  <div class='d-flex mt-3 justify-content-center'>
    <table class='table'>
      <thead>
        <tr>
          <th scope='col'>ID</th>
          <th scope='col'>Name</th>
          <th scope='col'>Category</th>
          <th scope='col' colspan='3'>Features</th>
          <th scope='col'>Amount</th>
          <th scope='col'>User</th>
          <th scope='col'></th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= link_to item.to_param, item_path(item) %></td>
            <td><%= item.name.humanize %></td>
            <td><%= item.category&.title %></td>
            <td colspan='3'><%=  item.list_of_features %></td>
            <td><%= item.amount %></td>
            <td><%= item.user.email %></td>
            <td>
              <%= link_to 'Duplicate', duplicate_item_path(item), method: :post, class: 'btn btn-primary' %>
              <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>