<div class='container'>
  <div class='d-flex flex-column mt-5'>
    <div class='p-2'>
      <p>
        <strong>Name:</strong>
        <%= @item.name.humanize %>
      </p>
    </div>
    <div class='p-2'>
      <p>
        <strong>Category:</strong>
        <%= @item.category&.title %>
      </p>
    </div>
    <div class='p-2'>
      <p>
        <strong>Feature:</strong>
        <%= @item.list_of_features %>
      </p>
    </div>
  </div>

  <div class='action d-flex align-items-baseline justify-content-between'>
    <%= link_to 'Back', items_path, class: 'btn btn-secondary p-2' %>
    <%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-primary p-2' %>
  </div>
</div>