<div class='container'>
  <div class='d-flex flex-column mt-5'>
    <div class='p-2'>
      <p>
        <strong>User:</strong>
        <%= @feature.user.email %>
      </p>
    </div>
    <div class='p-2'>
      <p>
        <strong>Title:</strong>
        <%= @feature.title&.humanize %>
      </p>
    </div>
    <div class='p-2'>
      <p>
        <strong>Value:</strong>
        <%= @feature.value&.humanize %>
      </p>
    </div>
  </div>

  <div class='actions d-flex align-items-baseline justify-content-between'>
    <%= link_to 'Back', features_path, class: 'btn btn-secondary p-2' %>
    <%= link_to 'Edit', edit_feature_path(@feature), class: 'btn btn-primary p-2' %>
  </div>
</div>
