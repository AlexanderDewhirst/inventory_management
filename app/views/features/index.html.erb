<div class='container'>
  <div class='d-flex mt-5 align-items-center justify-content-between'>
    <h1>Features</h1>
    <%= link_to "New", new_feature_path, class: 'btn btn-primary' %>
  </div>
  <div class='d-flex mt-3 justify-content-between'>
    <table class='table'>
      <thead>
        <tr>
          <th scope='col'>ID</th>
          <th scope='col'>Title</th>
          <th scope='col'>Value</th>
          <th scope='col'>User</th>
          <td scope='col'></td>
        </tr>
      </thead>

      <tbody>
        <% @features.each do |feature| %>
          <tr>
            <td><%= feature.to_param %></td>
            <td><%= feature.title&.humanize %>
            <td><%= feature.value&.humanize %>
            <td><%= feature.user.email %>
            <td>
              <div class='d-flex justify-content-end'>
                <%= link_to 'View', feature_path(feature), class: 'btn btn-primary p-2 mr-1' %>
                <%= link_to 'Destroy', feature, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger p-2' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>