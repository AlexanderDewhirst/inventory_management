<div class='container'>
  <div class='d-flex mt-5 align-items-center justify-content-between'>
    <h1>Categories</h1>
    
    <%= link_to 'New', new_category_path, class: 'btn btn-primary' %>
  </div>

  <div class='d-flex mt-3 justify-content-center'>
    <table class='table'>
      <thead>
        <tr>
          <th scope='col'>ID</th>
          <th scope='col'>Title</th>
          <th scope='col' colspan='3'>Description</th>
          <th scope='col'></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= link_to category.to_param, category_path(category) %>
            <td><%= category.title %></td>
            <td colpan='3'><%= category.description %></td>
            <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>