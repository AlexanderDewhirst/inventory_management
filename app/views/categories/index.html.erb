<div class='container'>
  <div class='d-flex mt-5 align-items-center justify-content-between'>
    <h1>Categories</h1>
    
    <%= link_to 'New', new_category_path, class: 'btn btn-primary' %>
  </div>

  <div class='d-flex mt-3 justify-content-center'>
    <table class='table'>
      <thead>
        <tr>
          <th scope='col'>ID</th>
          <th scope='col'>Title</th>
          <th scope='col' colspan='3'>Description</th>
          <th scope='col'></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.to_param %></td>
            <td><%= category.title.humanize %></td>
            <td colspan='3'><%= category.description %></td>
            <td>
              <div class='d-flex justify-content-end'>
                <%= link_to 'View', category_path(category), class: 'btn btn-primary p-2 mr-1' %>
                <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger p-2' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>