<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <%= render partial: "shared/flash_message", locals: { alert_type: 'danger', msg: category.errors.full_messages.to_sentence } %>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, value: category.title.humanize || nil, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="actions d-flex align-items-baseline justify-content-between">
    <%= link_to 'Back', categories_path, class: 'btn btn-secondary p-2' %>
    <%= form.submit "Submit", class: 'btn btn-primary p-2' %>
  </div>
<% end %>
