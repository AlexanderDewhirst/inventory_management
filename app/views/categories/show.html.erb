<div class='container'>
  <div class='d-flex flex-column mt-5'>
    <div class='p-2'>
      <p>
        <strong>Title:</strong>
        <%= @category.title.humanize %>
      </p>
    </div>
    <div class='p-2'>
      <p>
        <strong>Description:</strong>
        <%= @category.description %>
      </p>
    </div>
  </div>

  <div class='actions d-flex align-items-baseline justify-content-between'>
    <%= link_to 'Back', categories_path, class: 'btn btn-secondary p-2' %>
    <%= link_to 'Edit', edit_category_path(@category), class: 'btn btn-primary p-2' %>
  </div>
    
</div>